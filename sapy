import logging,os,json
from sapy_lib.arg_parser import Master
from sapy_lib.data_mgr import Data_mgr

_DATAFILE_ ="sample_data/data.json"
_DEBUG_ = True
_VERSION_ = 0.0
_DESCRIPTION_ = """
Simple program to manage and analize money movement 
"""
_NAME_ = "sapy"


def save_data ( data ) :
    if _DEBUG_ :
        print ("__ sapy __: save_data : " )
        print ( data.to_jsonable() )

    datafile = open( os.path.abspath( _DATAFILE_ ) , "w+")
    #json.dump( data, datafile )
    datafile.close()
    pass


def main ( ):
    if _DEBUG_ :
        print ("__ main __ ")

    data = Data_mgr ( _DATAFILE_ )
    data.load()
    master = Master( _NAME_, _VERSION_, _DESCRIPTION_, data )
    
    master.parse()

    master.run()

    data.dump()

    return

if _DEBUG_ :
    print "__ sapy __ "
    
main()

